<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_background"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3D&amp;T ALPHA"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FECACA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Character Name -->
            <EditText
                android:id="@+id/edit_char_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Personagem"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@null"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Attributes Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Included views will be inflated programmatically or we can define them here -->
                <!-- For simplicity in XML, we'll use include tags if possible, but GridLayout with includes is tricky.
                     We will use a LinearLayout with weighted children for rows instead to mimic the grid. -->
            </GridLayout>
            
            <!-- Alternative Attributes Layout using LinearLayouts for better control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">
                
                <include layout="@layout/view_attribute_input" android:id="@+id/attr_forca" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="4dp"/>
                <include layout="@layout/view_attribute_input" android:id="@+id/attr_habilidade" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="8dp">

                <include layout="@layout/view_attribute_input" android:id="@+id/attr_resistencia" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="4dp"/>
                <include layout="@layout/view_attribute_input" android:id="@+id/attr_armadura" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="4dp"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <include layout="@layout/view_attribute_input" android:id="@+id/attr_pdf" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="4dp"/>
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Status Bars -->
            <include layout="@layout/view_status_manager" android:id="@+id/status_pv" android:layout_marginBottom="16dp"/>
            <include layout="@layout/view_status_manager" android:id="@+id/status_pm" android:layout_marginBottom="16dp"/>

            <!-- Combat Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMBATE"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_attack_f"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ATACAR (F)"
                    android:backgroundTint="#DC2626"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_attack_pdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ATACAR (PdF)"
                    android:backgroundTint="#7C3AED"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_defense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEFENDER"
                android:backgroundTint="#059669"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Roll Result -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_roll_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1F2937"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_roll_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATAQUE (F)"
                        android:textColor="#9CA3AF"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/text_roll_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/text_roll_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H(3) + F(2) + 1d6(5)"
                        android:textColor="#D1D5DB"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Lists (Placeholders for now, can be expanded) -->
            <Button
                android:id="@+id/btn_manage_advantages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vantagens &amp; Desvantagens"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

             <Button
                android:id="@+id/btn_manage_inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InventÃ¡rio"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
